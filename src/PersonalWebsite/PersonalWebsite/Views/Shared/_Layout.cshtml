            <script>
                window.dataLayer = window.dataLayer || [];
                function gtag() { dataLayer.push(arguments); }
                gtag('js', new Date());

                gtag('config', 'UA-120225268-1');
            </script>*@

        @*<script src="~/Scripts/app.js"></script>
        <script src="~/Scripts/particles.js"></script>*@
    }

</body>
</html>