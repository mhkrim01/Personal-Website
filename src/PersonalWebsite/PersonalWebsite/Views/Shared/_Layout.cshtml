<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @System.Web.Optimization.Styles.Render("~/bundles/css")

    @System.Web.Optimization.Styles.Render("~/Content/css")
</head>


<body>
    <div id="container">
        <div id="header">
            @Html.Partial("Navbar")
        </div>
        <div id="body">
            @RenderBody()
        </div>
        <div id="footer">
            @Html.Partial("Footer")
        </div>
    </div>

    <div id="particles-js"></div>

    @System.Web.Optimization.Scripts.Render("~/bundles/common-js")

    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")

    @System.Web.Optimization.Scripts.Render("~/bundles/particles")
    @System.Web.Optimization.Scripts.Render("~/bundles/app-js")

    @section pagescripts{

        <script>
            (function (helper) {
                $(function () {
                    helper.onready();
                })
            })(homeHelper)
        </script>

